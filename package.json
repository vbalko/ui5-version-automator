  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vbalko/ui5-version-automator/issues"
  },
  "homepage": "https://github.com/vbalko/ui5-version-automator#readme",
  "dependencies": {
    "jsonfile": "^6.1.0"
  },
  "devDependencies": {
    "mocha": "^10.2.0"
  }
}
