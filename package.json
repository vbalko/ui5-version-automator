{
  "name": "ui5-version-automator",
  "version": "0.5.2",
  "description": "An npm package that automates versioning for SAP UI5 applications, streamlining the release process and ensuring version consistency.",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha test/versionManager.test.js",
    "version": "npm version patch",
    "preversion": "git fetch --tags && npm test",
